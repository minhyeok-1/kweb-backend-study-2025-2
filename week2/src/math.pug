doctype html
html
  head
    title 통합 계산기
    style.
      body { font-family: Arial, sans-serif; padding: 20px; }
      .calculator { display: flex; gap: 30px; }
      form { border: 1px solid #ccc; padding: 15px; border-radius: 5px; }
      input[type="number"] { width: 100px; }
      .result { margin-top: 20px; padding: 10px; background-color: #e6f7ff; border: 1px solid #91d5ff; border-radius: 5px; }

  body
    h1 계산기
    
    if message
      .result
        h2 계산 결과
        p= message

    .calculator
      // 덧셈(SUM) 폼
      div
        h3 덧셈 계산하기
        form(method='GET', action='/math/sum')
          label(for='sum_a') 숫자 A:
          input#sum_a(type='number', name='a', required)
          br
          label(for='sum_b') 숫자 B:
          input#sum_b(type='number', name='b', required)
          br
          button(type='submit') 덧셈 결과 보기

      // 뺄셈(SUB) 폼
      div
        h3 뺄셈 계산하기
        form(method='GET', action='/math/sub')
          label(for='sub_a') 숫자 A:
          input#sub_a(type='number', name='a', required)
          br
          label(for='sub_b') 숫자 B:
          input#sub_b(type='number', name='b', required)
          br
          button(type='submit') 뺄셈 결과 보기
